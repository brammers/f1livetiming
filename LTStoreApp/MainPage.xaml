                                <TextBlock TextAlignment="Right" Padding="0,0,10,0" Width="30" Text="{Binding CarNumber, Mode=OneWay}" Foreground="{Binding CarNumberColor, Mode=OneWay, Converter={StaticResource colorConverter}}" Style="{StaticResource LTValueTextBlockStyle}"/>
                                <TextBlock Width="140" Text="{Binding DriverName, Mode=OneWay}" Foreground="{Binding DriverNameColor, Mode=OneWay, Converter={StaticResource colorConverter}}" Style="{StaticResource LTValueTextBlockStyleSlim}"/>
                                <TextBlock TextAlignment="Right" Width="90" Text="{Binding Q1Time, Mode=OneWay}" Foreground="{Binding Q1TimeColor, Mode=OneWay, Converter={StaticResource colorConverter}}" Style="{StaticResource LTValueTextBlockStyle}"/>
                                <TextBlock TextAlignment="Right" Width="90" Text="{Binding Q2Time, Mode=OneWay}" Foreground="{Binding Q2TimeColor, Mode=OneWay, Converter={StaticResource colorConverter}}" Style="{StaticResource LTValueTextBlockStyle}"/>
                                <TextBlock TextAlignment="Right" Width="90" Text="{Binding Q3Time, Mode=OneWay}" Foreground="{Binding Q3TimeColor, Mode=OneWay, Converter={StaticResource colorConverter}}" Style="{StaticResource LTValueTextBlockStyle}"/>
                                <TextBlock TextAlignment="Right" Width="55" Text="{Binding Sector1Time, Mode=OneWay}" Foreground="{Binding Sector1TimeColor, Mode=OneWay, Converter={StaticResource colorConverter}}" Style="{StaticResource LTValueTextBlockStyle}"/>
                                <TextBlock TextAlignment="Right" Width="55" Text="{Binding Sector2Time, Mode=OneWay}" Foreground="{Binding Sector2TimeColor, Mode=OneWay, Converter={StaticResource colorConverter}}" Style="{StaticResource LTValueTextBlockStyle}"/>
                                <TextBlock TextAlignment="Right" Width="55" Text="{Binding Sector3Time, Mode=OneWay}" Foreground="{Binding Sector3TimeColor, Mode=OneWay, Converter={StaticResource colorConverter}}" Style="{StaticResource LTValueTextBlockStyle}"/>
                                <TextBlock TextAlignment="Right" Width="50" Padding="0,0,10,0" Text="{Binding LapCount, Mode=OneWay}" Foreground="{Binding LapCountColor, Mode=OneWay, Converter={StaticResource colorConverter}}" Style="{StaticResource LTValueTextBlockStyle}"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>
            <Grid Visibility="{Binding IsInPracticeMode, Converter={StaticResource visibilityConverter}}" Grid.Row="1" HorizontalAlignment="Left" Grid.ColumnSpan="2" Grid.Column="1" MaxWidth="720" Background="Black">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>

                <StackPanel Margin="10,0,0,0" Orientation="Horizontal" Height="30">
                    <TextBlock Text="Pos" Width="40" Style="{StaticResource LTHeaderTextBlockStyle}" VerticalAlignment="Center"/>
                    <TextBlock TextAlignment="Center" Text="Name" Width="210" Style="{StaticResource LTHeaderTextBlockStyle}" VerticalAlignment="Center"/>
                    <TextBlock TextAlignment="Right" Text="Best" Width="90" Style="{StaticResource LTHeaderTextBlockStyle}" VerticalAlignment="Center"/>
                    <TextBlock TextAlignment="Right" Text="S1" Width="80" Style="{StaticResource LTHeaderTextBlockStyle}" VerticalAlignment="Center"/>
                    <TextBlock TextAlignment="Right" Text="S2" Width="80" Style="{StaticResource LTHeaderTextBlockStyle}" VerticalAlignment="Center"/>
                    <TextBlock TextAlignment="Right" Text="S3" Width="80" Style="{StaticResource LTHeaderTextBlockStyle}" VerticalAlignment="Center"/>
                    <TextBlock TextAlignment="Right" Text="Laps" Width="75" Style="{StaticResource LTHeaderTextBlockStyle}" VerticalAlignment="Center"/>
                </StackPanel>

                <Grid Grid.Row="3">
                    <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,0,0,10" HorizontalAlignment="Left">
                        <TextBlock Text="Track Status:" Foreground="White" FontFamily="Segoe UI" FontSize="14.667" Margin="10,0"/>
                        <TextBlock Text="{Binding TrackStatus, Mode=OneWay}" Foreground="{Binding TrackStatusColor, Converter={StaticResource colorConverter}, Mode=OneWay}" FontFamily="Segoe UI" FontSize="14.667" Margin="0,0,10,0"/>
                        <TextBlock Text="{Binding TrackStatusMessage, Mode=OneWay}" FontFamily="Segoe UI" FontSize="14.667" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,10">
                        <TextBlock TextWrapping="Wrap" Text="Time remaining:" FontFamily="Segoe UI" FontSize="14.667" Margin="0,0,10,0"/>
                        <TextBlock TextWrapping="Wrap" Text="{Binding EventRemainingTimeStr}" FontFamily="Segoe UI" FontSize="14.667" Width="60" Margin="0,0,10,0" TextAlignment="Right" Foreground="Yellow"/>
                    </StackPanel>
                </Grid>


                <ListView ItemsSource="{Binding Cars}" Background="Black" Grid.Row="1" Margin="0" Padding="0" SelectionMode="None" ItemContainerStyle="{StaticResource LTListViewItemStyle}">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Background="{Binding TablePosition, Mode=OneWay, Converter={StaticResource oddEvenColorConverter}}" VerticalAlignment="Top" Height="20" Margin="10,0,0,0">
                                <TextBlock TextAlignment="Right" Padding="0,0,10,0" Width="30" Text="{Binding Position, Mode=OneWay, Converter={StaticResource positionConverter}}" Foreground="{Binding PositionColor, Mode=OneWay, Converter={StaticResource colorConverter}}" Style="{StaticResource LTValueTextBlockStyle}"/>
                                <TextBlock TextAlignment="Right" Padding="0,0,10,0" Width="30" Text="{Binding CarNumber, Mode=OneWay}" Foreground="{Binding CarNumberColor, Mode=OneWay, Converter={StaticResource colorConverter}}" Style="{StaticResource LTValueTextBlockStyle}"/>
                                <TextBlock Width="190" Text="{Binding DriverName, Mode=OneWay}" Foreground="{Binding DriverNameColor, Mode=OneWay, Converter={StaticResource colorConverter}}" Style="{StaticResource LTValueTextBlockStyle}"/>
                                <TextBlock TextAlignment="Right" Width="90" Text="{Binding BestPracticeLapTime, Mode=OneWay}" Foreground="{Binding BestPracticeLapTimeColor, Mode=OneWay, Converter={StaticResource colorConverter}}" Style="{StaticResource LTValueTextBlockStyle}"/>
                                <TextBlock TextAlignment="Right" Width="80" Text="{Binding Sector1Time, Mode=OneWay}" Foreground="{Binding Sector1TimeColor, Mode=OneWay, Converter={StaticResource colorConverter}}" Style="{StaticResource LTValueTextBlockStyle}"/>
                                <TextBlock TextAlignment="Right" Width="80" Text="{Binding Sector2Time, Mode=OneWay}" Foreground="{Binding Sector2TimeColor, Mode=OneWay, Converter={StaticResource colorConverter}}" Style="{StaticResource LTValueTextBlockStyle}"/>
                                <TextBlock TextAlignment="Right" Width="80" Text="{Binding Sector3Time, Mode=OneWay}" Foreground="{Binding Sector3TimeColor, Mode=OneWay, Converter={StaticResource colorConverter}}" Style="{StaticResource LTValueTextBlockStyle}"/>
                                <TextBlock TextAlignment="Right" Width="80" Padding="0,0,5,0" Text="{Binding LapCount, Mode=OneWay}" Foreground="{Binding LapCountColor, Mode=OneWay, Converter={StaticResource colorConverter}}" Style="{StaticResource LTValueTextBlockStyle}"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>

            <Grid Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" Margin="0">
                <tools:AutoScrollListView Background="{x:Null}" ItemsSource="{Binding Comments}" Margin="0,10,0,0" SelectionMode="None"
                          Visibility="{Binding IsCommentsTableReduced, Converter={StaticResource visibilityConverter}}">
                    <tools:AutoScrollListView.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Comment}" TextWrapping="WrapWholeWords" Foreground="White" FontSize="16" Margin="0,0,10,10"/>
                        </DataTemplate>
                    </tools:AutoScrollListView.ItemTemplate>
                </tools:AutoScrollListView>                
            </Grid>
        </Grid>
    </Grid>
</Page>
